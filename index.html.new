<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Exam System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .slide {
            position: absolute;
            inset: 0;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }
        
        .slide.active,
        .slide:not(.hidden) {
            opacity: 1;
        }
        
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <!-- Header with Navigation Bar -->
    <nav class="bg-white shadow-md fixed w-full z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex-shrink-0 flex items-center">
                    <a href="index.html" class="text-xl font-bold text-gray-800">Online Exam System</a>
                </div>
                <div class="hidden sm:flex sm:items-center" id="navActions">
                    <div class="flex space-x-4">
                        <a href="index.html" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Home</a>
                        <a href="about.html" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">About</a>
                        <a href="features.html" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Features</a>
                        <a href="contact.html" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Contact</a>
                    </div>
                    <div class="ml-4">
                        <button onclick="openAuthAndShow('login')" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-150 ease-in-out">Login | Sign Up</button>
                    </div>
                </div>
                <button class="sm:hidden flex items-center text-gray-500 hover:text-gray-600" onclick="toggleMenu()">â˜°</button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <!-- Hero Section with Background Image Slider -->
        <section class="relative h-screen">
            <!-- Background Images Slider -->
            <div class="absolute inset-0">
                <div class="slide active">
                    <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&q=80" 
                         alt="Online Exam 1" 
                         class="w-full h-full object-cover"
                    />
                </div>
                <div class="slide hidden">
                    <img src="https://images.unsplash.com/photo-1516321318423-f06f85e504b3?auto=format&fit=crop&q=80" 
                         alt="Online Exam 2" 
                         class="w-full h-full object-cover"
                    />
                </div>
                <div class="slide hidden">
                    <img src="https://images.unsplash.com/photo-1571260899304-425eee4c7efc?auto=format&fit=crop&q=80" 
                         alt="Online Exam 3" 
                         class="w-full h-full object-cover"
                    />
                </div>
                <div class="slide hidden">
                    <img src="https://images.unsplash.com/photo-1601807576163-587225545555?auto=format&fit=crop&q=80" 
                         alt="Online Exam 4" 
                         class="w-full h-full object-cover"
                    />
                </div>
                <div class="absolute inset-0 bg-black/40"></div>
            </div>
            <!-- Hero Content -->
            <div class="relative z-10 h-full flex items-center justify-center">
                <div class="text-center text-white px-4">
                    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">Welcome to Online Exam System</h1>
                    <p class="text-xl sm:text-2xl mb-8 max-w-3xl mx-auto">A modern platform for conducting online examinations with ease.</p>
                    <div class="flex flex-col sm:flex-row justify-center gap-4">
                        <button onclick="openAuthAndShow('signup')" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg text-lg transition duration-150 ease-in-out">Get Started</button>
                        <button onclick="openAuthAndShow('login')" class="bg-white hover:bg-gray-100 text-blue-600 font-semibold py-3 px-8 rounded-lg text-lg transition duration-150 ease-in-out">Login Now</button>
                    </div>
                </div>
            </div>
            <!-- Slider Navigation Dots -->
            <div class="absolute bottom-8 left-0 right-0 flex justify-center space-x-4 z-10">
                <button class="w-3 h-3 rounded-full bg-white opacity-50 hover:opacity-100 focus:opacity-100 transition-opacity duration-300" data-slide="0"></button>
                <button class="w-3 h-3 rounded-full bg-white opacity-50 hover:opacity-100 focus:opacity-100 transition-opacity duration-300" data-slide="1"></button>
                <button class="w-3 h-3 rounded-full bg-white opacity-50 hover:opacity-100 focus:opacity-100 transition-opacity duration-300" data-slide="2"></button>
                <button class="w-3 h-3 rounded-full bg-white opacity-50 hover:opacity-100 focus:opacity-100 transition-opacity duration-300" data-slide="3"></button>
            </div>
        </section>
    </main>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let currentSlide = 0;
            const slides = document.querySelectorAll('.slide');
            const dots = document.querySelectorAll('[data-slide]');
            const slideInterval = 5000; // Change slide every 5 seconds
        
            function showSlide(index) {
                // Hide all slides
                slides.forEach(slide => {
                    slide.classList.add('hidden');
                    slide.classList.remove('active');
                });
                
                // Update dots
                dots.forEach(dot => dot.classList.remove('opacity-100'));
                
                // Show the current slide
                slides[index].classList.remove('hidden');
                slides[index].classList.add('active');
                dots[index].classList.add('opacity-100');
            }
        
            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlide(currentSlide);
            }
        
            // Add click events to dots
            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    currentSlide = index;
                    showSlide(currentSlide);
                });
            });
        
            // Set first slide and dot as active
            showSlide(0);
        
            // Start the slideshow
            setInterval(nextSlide, slideInterval);
        });
    </script>
</body>
</html>